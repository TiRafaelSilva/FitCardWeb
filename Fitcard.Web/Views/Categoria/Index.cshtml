@model IEnumerable<Fitcard.Web.Models.Categoria>

@{
    ViewBag.Title = "Categoria";
}

<h2>Lista de Categoria</h2>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Categoria
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CAT_NOME)
                    </td>
                    <td style="text-align:right">
                        <a href="@Url.Action("Edit", "Categoria",new { id = item.CAT_ID })" class="btn btn-info">
                            Editar
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        | <a href="@Url.Action("Delete", "Categoria",new { id = item.CAT_ID })" class="btn btn-danger">
                        Excluir
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
    <div style="text-align:right">
        <a href="@Url.Action("Create", "Categoria")" class="btn btn-primary">
            Novo
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
    </div>

</div>