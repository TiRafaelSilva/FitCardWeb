@model IEnumerable<Fitcard.Web.Models.Estabelecimento>

@{
    ViewBag.Title = "Estabelecimento";
}

<h2>Estabelecimento</h2>

<table class="table">
    <thead>

        <tr>
            <th>
                Categoria
            </th>
            <th>
                Estabelecimento
            </th>
            <th>
                Nome Fantasia
            </th>
            <th>
                CNPJ
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefone
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.CAT_NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EST_NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EST_NOME_FANTASIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EST_CNPJ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EST_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EST_TELEFONE)
        </td>
        <td>
            @if (item.EST_STATUS == 0)
            {
                @Html.Label("Inativo")

            }
            else
            {
                @Html.Label("Ativo")

            }
        </td>
        <td style="text-align:right">
            <a href="@Url.Action("Edit", "Estabelecimento",new { id = item.EST_ID })" class="btn btn-info">
                Editar
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            | <a href="@Url.Action("Delete", "Estabelecimento",new { id = item.EST_ID })" class="btn btn-danger">
                Excluir
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}
    </tbody>

</table>
<div style="text-align:right">
    <a href="@Url.Action("Create", "Estabelecimento")" class="btn btn-primary">
        Novo
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</div>
